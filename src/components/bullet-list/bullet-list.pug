include ./../widget-title/widget-title.pug

mixin bullet-list(options = {})
  -
    const { title: { text = "", level = "3" }, items = [], listStyle = false } = options

    const classes = [
      "bullet-list",
      listStyle ? "bullet-list_list-style" : ""
    ]
  
  div(class=classes)
    .bullet-list__title 
      +widget-title({text: text, level: level})
    ul.bullet-list__items
      each item in items
        li.bullet-list__item= item.text
