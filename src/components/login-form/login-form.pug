include ./../widget-title/widget-title.pug
include ./../input/input.pug
include ./../button/button.pug

mixin login-form
  form.login-form(action="#")
    .login-form__title
      +widget-title({text: "Войти", level: "1"}) 
    .login-form__mail 
      +input({type: "mail", placeholder: "Email", required: true})
    .login-form__password 
      +input({type: "password", placeholder: "Пароль", required: true})
    .login-form__button-login
      +button({
        text: "войти", 
        color: "main",
        size: "big",
        icon: "arrow_forward",
        type: "button"
      })
    .login-form__button-create 
      span Нет аккаунта на Toxin?
      +button({
        text: "создать", 
        color: "secondary",
        size: "medium",
        outline: "true",
        link: "./registration.html"
      })
