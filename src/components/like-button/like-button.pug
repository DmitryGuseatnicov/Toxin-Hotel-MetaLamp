mixin like-button(options={})
  -
    const { count, liked=false } = options
  if (liked)
    button.like-button.js-like-button.like-button--liked
      span.material-icons.like-button__icon.js-like-button__icon favorite
      span.like-button__count.js-like-button__count= count
  else
    button.like-button.js-like-button
      span.material-icons.like-button__icon.js-like-button__icon favorite_border
      span.like-button__count.js-like-button__count= count
