mixin nav-menu(options={})
  -
    const { items = [] } = options

  nav.nav.js-nav
    ul.nav__list 
      each item in items
        -
          const { link = [], active = false, children = [] } = item

          const classes = [
            "nav__item js-nav__item",
            active ? "nav__item_active" : "",
            children.length > 0 ? "nav__item_hav-children" : ""
          ]

        if (children.length > 0)
          li(class=classes)
            .nav__item-link
              a.nav__item-href(href=link.href tabindex="0")= link.name
              span.material-icons.nav__item-arrow
            ul.nav__item-children
              each child in children
                li.nav__item-children
                  a.nav__item-children-href(href=child.href)= child.name
        else
          li(class=classes)
            .nav__item-link
              a.nav__item-href(href=link.href)= link.name
