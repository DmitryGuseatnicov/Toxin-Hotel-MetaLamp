mixin widget-title(options={})
  -
    let level = options.level ? options.level : '3'
    let text = options.text ? options.text : ''


  if (level === '1')
    h1(class='widget-title widget-title--big')= text
  
  if (level === '2')
    h2(class='widget-title widget-title--medium')= text

  if (level >= '3')
    h3(class='widget-title widget-title--small')= text