include ./../widget-title/widget-title.pug

mixin range-slider(options={})
  -
    const {label , min=0, max=100, start = 0, end=100 } = options 
  .range-slider.js-range-slider
    .range-slider__header 
      .range-slider__title 
        +widget-title({text:label})
      .range-slider__values
        span.range-slider__value!= `${start}â‚½ - ${end}â‚½`
        input.range-slider__input-start.js-range-slider__input-start(
          type="range",
          name="start",
          min=min,
          value=start,
          readonly="true"
        )

        input.range-slider__input-end.js-range-slider__input-end(
          type="range",
          name="end",
          max=max,
          value=end,
          readonly="true"
        )

    .range-slider__slider 
