mixin button(options = {})
  -
    const { 
      text, textColor, color, size,  height, link,
      border, icon, disabled, submit = false
      } = options 

    const tag = link ? "a" : "button"

    const textColors = {
      white: "button_text-white",
      purple: "button_text-purple"
    }

    const buttonColors = {
      "purple-gradient": "button_purple-gradient",
      white: "button_white",
    }

    const borders = {
      "purple-gradient": "button_border-purple-gradient",
    }

    const heights = {
      short: "button_height-short",
      medium: "button_height-medium",
      high: "button_height-high"
    }

    const sizes = {
      small: "button_size-small",
      medium: "button_size-medium",
      big: "button_size-big",
    }

    const classes = [
      "button",
      icon ? 'button_with-icon' : '',
      textColors[textColor],
      buttonColors[color],
      borders[border],
      heights[height],
      sizes[size], 
    ]

  if(icon) 
    #{tag}(class=classes, disabled=disabled, href=link)
      span.button__inner
        span.button__text= text
        span.button__icon
            span.material-icons= icon
  else 
    #{tag}(class=classes, disabled=disabled href=link)
      span.button__text= text