extends ./../../page-layout/page-template.pug
include ./../../components/benefits/benefits.pug
include ./../../components/comment/comment.pug
include ./../../components/booking-form/booking-form.pug
include ./../../components/bullet-list/bullet-list.pug
include ./../../components/widget-title/widget-title.pug
include ./../../components/diagram/diagram.pug

block head-title 
  - const title = "room-details-page"

block variables 
  - const separator = true

block content
  .room-details
    section.room-details__gallery 
      .room-details__gallery-photo.room-details__gallery-photo_big
        img.room-details__gallery-photo(src=require("./assets/img/room-img-2.png"), alt="room-photo")
      .room-details__gallery__img 
        img.room-details__gallery-photo(src=require("./assets/img/room-img.png"), alt="room-photo")
      .room-details__gallery__img 
        img.room-details__gallery-photo(src=require("./assets/img/room-img-3.png"), alt="room-photo")

    .container
      section.room-details__content
        .room-details__content-container
          .room-details__description
            .room-details__benefits 
              .room-details__benefits-title 
                +widget-title({text: "Сведения о номере", level:"2"})
              ul.room-details__benefits-items
                li.room-details__benefits-item
                  +benefits({
                    title: "Комфорт", 
                    description: "Шумопоглощающие стены", 
                    src:require("./assets/img/insert-emoticon.png"), 
                    underlined: true 
                  })
                li.room-details__benefits-item
                  +benefits({
                    title: "Удобство",
                    description: "Окно в каждой из спален", 
                    src:require("./assets/img/location-city.png"), 
                    underlined: true 
                  }) 
                li.room-details__benefits-item
                  +benefits({
                    title: "Уют", 
                    description: "Номер оснащён камином", 
                    src:require("./assets/img/whats-hot.png"), 
                  })

            .room-details__grade
              .room-details__grade-title 
                +widget-title({text: "Впечатления от номера", level: "2"})
              .room-details__grade-chart 
                +diagram

            .room-details__reviews
              .room-details__reviews-title
                +widget-title({text: "Отзывы посетителей номера", level: "2"}) 
                .room-details__reviews-count 2 отзыва
              .room-details__reviews__items
                .room-details__reviews-item
                  +comment({ 
                    name: "Мурад Сарафанов", 
                    time: " 5 дней назад", 
                    comment: `Великолепный матрас на кровати в основной спальне! 
                            А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. 
                            Выкрикивал комплименты повару — никто не жаловался из соседей.`,
                    count: "12", 
                    liked: true, 
                    src : require("./assets/img/avatar-1.png") 
                  })
                .room-details__reviews-item
                  +comment({ 
                    name: "Патрисия Стёклышкова", 
                    time: "Неделю назад", 
                    comment: `Обслуживание на высоте! Всё аккуратно, чисто. 
                            Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент`, 
                    count: "2", 
                    src : require("./assets/img/avatar-2.png") 
                  })

            section.room-details__rules 
              +bullet-list({
                title:{text:"Правила", level: "2"}, 
                listStyle: true ,items:[ 
                  {text: "Нельзя с питомцами"}, 
                  {text: "Без вечеринок и мероприятий"}, 
                  {text: "Время прибытия — после 13:00, а выезд до 12:00"}, 
                  ]
                })

            section.room-details__cancel
              .room-details__cancel-title 
                +widget-title({text:"Отмена", level: "2"})
              p.room-details__cancel-description 
                | Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн.
                | до прибытия вы получите полный возврат за вычетом сбора за услуги.

          .room-details__booking-form 
            +booking-form({
              number: "888", 
              firstDate:"19.08.2019", 
              secondDate:"23.08.2019", 
              adult: "2", 
              child: "1", 
              baby: "0", 
              price: "9 990", 
              days: 4 
            })