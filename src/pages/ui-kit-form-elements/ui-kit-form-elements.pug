extends ./../../page-layout/page-ui-kit.pug
include ./../../components/input/input.pug
include ./../../components/dropdown/dropdown.pug
include ./../../components/button/button.pug
include ./../../components/date-dropdown/date-dropdown.pug
include ./../../components/widget-title/widget-title.pug
include ./../../components/range-slider/range-slider.pug
include ./../../components/checkbox/checkbox.pug
include ./../../components/radio/radio.pug
include ./../../components/toggle/toggle.pug
include ./../../components/like-button/like-button.pug
include ./../../components/rate-button/rate-button.pug
include ./../../components/pagination/pagination.pug
include ./../../components/checkbox-list/checkbox-list.pug
include ./../../components/benefits/benefits.pug
include ./../../components/bullet-list/bullet-list.pug
include ./../../components/comment/comment.pug

block page-title  
  -
    const title = "ui-kit-form-elements"

block content
  .container-fluid
    .ui-kit__buttons-and-inputs
      .ui-kit__colum
        .ui-kit__text-field
          +input({type: "mail", label: "text field", placeholder: "Email",})
        .ui-kit__text-field
          +input({type: "text", label: "text field", value: "This is pretty awesome"})
        .ui-kit__dropdown-guest
          +dropdown({label: "Dropdown", placeholder: "Cколько гостей", items:[ {name: "взрослые", value: "0"}, {name: "дети", value: "0"}, {name: "младенцы", value: "0"} ]})

        .ui-kit__mask-text-field
          +input({type: "text", label: "masked text field", mask: "data", placeholder: "ДД.ММ.ГГГГ"})

        .ui-kit__date-dropdown
          +date-dropdown({label: "date Dropdown", secondLabel:"date Dropdown",root:"ui-kit-double-date-dropdown",  modification:"double", secondValue:"19.08.2019"})

        .ui-kit__filter-date-dropdown
          +date-dropdown({label: "filter date dropdown", root:"ui-kit-filter-date-dropdown",  modification:"filter", value:"19 авг - 23 авг"})

        .ui-kit__input-subscribe
          +input({label: "subscription text field", placeholder: "Email" ,subscribe: true})

      .ui-kit__colum
        .ui-kit__checkbox
          .ui-kit__checkbox-title 
            +widget-title({text:"Checkbox Buttons"})

          .ui-kit__checkbox-items
            .ui-kit__checkbox-item
              +checkbox({label :"Можно курить"})

            .ui-kit__checkbox-item
              +checkbox({label :"Можно с питомцами", checked: true})

            .ui-kit__checkbox-item
              +checkbox({label :"Можно пригласить гостей (до 10 человек)", checked: true})

        .ui-kit__radio
          .ui-kit__radio-title 
            +widget-title({text:"Radio Buttons"})

          .ui-kit__radio-items
            .ui-kit__radio-item
              +radio({label: "Мужчина", name:"sex", checked: true})

            .ui-kit__radio-item
              +radio({label: "Женщина", name:"sex"})

        .ui-kit__toggle
          .ui-kit__toggle-title 
            +widget-title({text:"Toggle"})

          .ui-kit__toggle-items
            .ui-kit__toggle-item
              +toggle({label: "Получать спецпредложения", checked: true})

            .ui-kit__toggle-item
              +toggle({label: "Получать спецпредложения"})

        .ui-kit__like-button
          .ui-kit__like-button-title
            +widget-title({text:"like button"})

          .ui-kit__like-button-items
            .ui-kit__like-button-item
              +like-button({count: "2"})

            .ui-kit__like-button-item
              +like-button({count: "12", liked: "true"})

        .ui-kit__rate-button
          +widget-title({text: "rate button"})

          .ui-kit__rate-button-items
            .ui-kit__rate-button-item
              +rate-button({rate:"4"})

            .ui-kit__rate-button-item
              +rate-button({rate:"5"})

      .ui-kit__colum
        .ui-kit__range-slider 
          +range-slider({label: "Range Slider", min:"0", max:"15500", start:"5000", end:"10000"})

        .ui-kit__buttons
          +widget-title({text: "Buttons"})

          .ui-kit__buttons-purple
            .ui-kit__button
              +button({text:"click me",  modification: "purple"})

            .ui-kit__button
              +button({text:"click me",  modification: "purple", disabled: true})

          .ui-kit__buttons-purple-border
            .ui-kit__button
              +button({text:"click me",  modification: "purple-border"})

            .ui-kit__button
              +button({text:"click me",  modification: "purple-border", disabled: true})

          .ui-kit__buttons-simple
            .ui-kit__button
              +button({text:"click me",  modification: "simple"})

            .ui-kit__button
              +button({text:"click me",  modification: "simple", disabled: true})

          .ui-kit__buttons-purple-link
            +button({text:'перейти к оплате',  modification: "purple-link"})

        .ui-kit__pagination 
          .ui-kit__pagination-title 
            +widget-title({text: "pagination"})

          .ui-kit__pagination-content
            +pagination

    .ui-kit__dropdowns-behavior
      .ui-kit__colum
        .ui-kit__dropdown-comforts
          +dropdown({
            label: "Dropdown", placeholder: "Выберете удобства", actionButtons: false, type:"comforts",items:[ 
              {name: "спальни", value: "2"}, 
              {name: "кровати", value: "2"}, 
              {name: "ванные комнаты", value: "1"} 
            ]
          })

        .ui-kit__dropdown-comforts-open
          +dropdown({
            label: "Dropdown", placeholder: "Выберете удобства", actionButtons: false, type:"comforts", open: true, items:[ 
              {name: "спальни", value: "2"}, 
              {name: "кровати", value: "2"}, 
              {name: "ванные комнаты", value: "0"} 
            ]
          })

      .ui-kit__colum
        .ui-kit__dropdown-guest-open
          +dropdown({
            label: "Dropdown", placeholder: "Сколько гостей", open: true,items:[ 
              {name: "взрослые", value: "0"}, 
              {name: "дети", value: "0"},
              {name: "младенцы", value: "0"} 
            ]
          })

      .ui-kit__colum
        .ui-kit__dropdown-guest-open
          +dropdown({
            label: "Dropdown", placeholder: "Сколько гостей", open: true, items:[ 
              {name: "взрослые", value: "2"},
              {name: "дети", value: "1"},
              {name: "младенцы", value: "0"}
            ]
          })

    .ui-kit__lists
      .ui-kit__colum
        .ui-kit__checkbox-list
          +checkbox-list({
            title: "expandable checkbox list", items:[ 
              {label: "Завтрак"}, 
              {label: "Письменный стол", checked: true}, 
              {label: "Стул для кормления", checked: true}, 
              {label: "Кроватка", checked: true},
              {label: "Телевизор"}, {label: "Шампунь"}, 
            ]
          })

        .ui-kit__checkbox-list-open
          +checkbox-list({
            title: "expandable checkbox list", open: true, items:[ 
              {label: "Завтрак"}, 
              {label: "Письменный стол", checked: true}, 
              {label: "Стул для кормления", checked: true}, 
              {label: "Кроватка", checked: true}, 
              {label: "Телевизор"}, {label: "Шампунь"}, 
            ]
          })

      .ui-kit__colum
        .ui-kit__checkbox-rich
          .ui-kit__checkbox-rich-title
            +widget-title({text:"rich Checkbox Buttons"})

          .ui-kit__checkbox-rich-items
            .ui-kit__checkbox-rich-item
              +checkbox({label:"Широкий коридор", description: "Ширина коридоров в номере не менее 91 см.", modification:"rich"})

            .ui-kit__checkbox-rich-item
              +checkbox({label:"Помощник для инвалидов", description: "На 1 этаже вас встретит специалист и проводит до номера.", modification:"rich"})

      .ui-kit__colum
        .ui-kit__bullet-list 
          +bullet-list({
            title: {text: "bullet list"} , items:[ 
              {text: "Нельзя с питомцами"}, 
              {text: "Без вечеринок и мероприятий"}, 
              {text: "Время прибытия — после 13:00, а выезд до 12:00"}, 
            ]
          })

    .ui-kit__benefits-and-comments
      .ui-kit__colum
        .ui-kit__benefits-list 
          .ui-kit__benefits-item
            +benefits({title:"Комфорт", description: "Шумопоглощающие стены", src: require('./assets/img/insert-emoticon.png'), underlined: true})

          .ui-kit__benefits-item
            +benefits({title:"Удобство", description: "Окно в каждой из спален", src: require('./assets/img/location-city.png'), underlined: true})

      .ui-kit__comment
        +comment({ 
          name: "Мурад Сарафанов", 
          time: "5 дней назад", 
          comment: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.", 
          count: "12", 
          liked: true, 
          src: require('./assets/img/avatar-1.png') 
        })
