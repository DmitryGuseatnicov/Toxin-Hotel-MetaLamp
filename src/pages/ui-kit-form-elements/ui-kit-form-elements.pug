include ./../../components/input/input.pug
include ./../../components/dropdown/dropdown.pug
include ./../../components/button/button.pug
include ./../../components/date-dropdown/date-dropdown.pug
include ./../../components/widget-title/widget-title.pug
include ./../../components/range-slider/range-slider.pug
include ./../../components/checkbox/checkbox.pug
include ./../../components/radio/radio.pug
include ./../../components/toggle/toggle.pug
include ./../../components/like-button/like-button.pug
include ./../../components/rate-button/rate-button.pug
include ./../../components/pagination/pagination.pug
include ./../../components/checkbox-list/checkbox-list.pug
include ./../../components/benefits/benefits.pug
include ./../../components/bullet-list/bullet-list.pug
include ./../../components/comment/comment.pug


doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
  body
    header.header
    .wrapper 
        main.main
            .container-fluid
              .ui-kit-form-elem__buttons-and-inputs
                .ui-kit-form-elem__colum
                  .ui-kit-form-elem__text-field
                    +input({type: "mail", label: "text field", placeholder: "Email",})

                  .ui-kit-form-elem__text-field
                    +input({type: "text", label: "text field", value: "This is pretty awesome"})

                  .ui-kit-form-elem__dropdown-guest
                    +dropdown({label: "Dropdown", placeholder: "Сколько гостей", items:[
                      {name: "взрослые", value: "0"},
                      {name: "дети", value: "0"},
                      {name: "младенцы", value: "0"}
                    ]})
                    
                  .ui-kit-form-elem__mask-text-field
                    +input({type: "text", label: "masked text field", mask: "data", placeholder: "ДД.ММ.ГГГГ"})
                  
                  .ui-kit-form-elem__date-dropdown
                    +date-dropdown({label: "date Dropdown", secondLabel:"date Dropdown",root:"ui-kit-double-date-dropdown", mod:"double"})
                  
                  .ui-kit-form-elem__filter-date-dropdown
                    +date-dropdown({label: "filter date dropdown", root:"ui-kit-filter-date-dropdown", mod:"filter", value:"19 авг - 23 авг"})

                  .ui-kit-form-elem__input-subscribe
                    +input({label: "subscription text field", placeholder: "Email" ,subscribe: true})
                

                .ui-kit-form-elem__colum
                  .ui-kit-form-elem__checkbox
                    .ui-kit-form-elem__checkbox-title 
                      +widget-title({text:"Checkbox Buttons"})
                    .ui-kit-form-elem__checkbox-items
                      .ui-kit-form-elem__checkbox-item
                        +checkbox({label :"Можно курить"})
                      .ui-kit-form-elem__checkbox-item
                        +checkbox({label :"Можно с питомцами", checked: true})
                      .ui-kit-form-elem__checkbox-item
                        +checkbox({label :"Можно пригласить гостей (до 10 человек)", checked: true})

                  .ui-kit-form-elem__radio
                    .ui-kit-form-elem__radio-title 
                      +widget-title({text:"Radio Buttons"})
                    .ui-kit-form-elem__radio-items
                      .ui-kit-form-elem__radio-item
                        +radio({label: "Мужчина", name:"sex", checked: true})
                      .ui-kit-form-elem__radio-item
                        +radio({label: "Женщина", name:"sex"})

                  .ui-kit-form-elem__toggle
                    .ui-kit-form-elem__toggle-title 
                      +widget-title({text:"Toggle"})
                    .ui-kit-form-elem__toggle-items
                      .ui-kit-form-elem__toggle-item
                        +toggle({label: "Получать спецпредложения", checked: true})
                      .ui-kit-form-elem__toggle-item
                        +toggle({label: "Получать спецпредложения"})

                  .ui-kit-form-elem__like-button
                    .ui-kit-form-elem__like-button-title
                      +widget-title({text:"like button"})
                    .ui-kit-form-elem__like-button-items
                      .ui-kit-form-elem__like-button-item
                        +like-button({count: "2"})
                      .ui-kit-form-elem__like-button-item
                        +like-button({count: "12", liked: "true"})

                  .ui-kit-form-elem__rate-button
                    +widget-title({text: "rate button"})
                    .ui-kit-form-elem__rate-button-items
                      .ui-kit-form-elem__rate-button-item
                        +rate-button({rate:"4"})
                      .ui-kit-form-elem__rate-button-item
                        +rate-button({rate:"5"})


                .ui-kit-form-elem__colum
                  .ui-kit-form-elem__range-slider 
                    +range-slider({label: "Range Slider", min:"0", max:"16000", start:"5000", end:"10000"})

                  .ui-kit-form-elem__buttons
                    +widget-title({text: "Buttons"})

                    .ui-kit-form-elem__buttons-purple
                      .ui-kit-form-elem__button
                        +button({text:"click me", mod: "purple"})
                      .ui-kit-form-elem__button
                        +button({text:"click me", mod: "purple", disabled: true})
                        
                    .ui-kit-form-elem__buttons-purple-border
                      .ui-kit-form-elem__button
                        +button({text:"click me", mod: "purple-border"})
                      .ui-kit-form-elem__button
                        +button({text:"click me", mod: "purple-border", disabled: true})

                    .ui-kit-form-elem__buttons-simple
                      .ui-kit-form-elem__button
                        +button({text:"click me", mod: "simple"})
                      .ui-kit-form-elem__button
                        +button({text:"click me", mod: "simple", disabled: true})

                    .ui-kit-form-elem__buttons-purple-link
                        +button({text:'перейти к оплате', mod: "purple-link"})

                  .ui-kit-form-elem__pagination 
                    .ui-kit-form-elem__pagination-title 
                      +widget-title({text: "pagination"})
                    .ui-kit-form-elem__pagination-content
                      +pagination()
                  
                  
              .ui-kit-form-elem__dropdowns-behavior
                .ui-kit-form-elem__colum
                  .ui-kit-form-elem__dropdown-comforts
                    +dropdown({label: "Dropdown", placeholder: "Выберете удобства", actionButtons: false, type:"comforts",items:[
                      {name: "спальни", value: "2"},
                      {name: "кровати", value: "2"},
                      {name: "ванные комнаты", value: "1"}
                    ]})

                  .ui-kit-form-elem__dropdown-comforts-open
                    +dropdown({label: "Dropdown", placeholder: "Выберете удобства", actionButtons: false, type:"comforts", open: true, items:[
                      {name: "спальни", value: "2"},
                      {name: "кровати", value: "2"},
                      {name: "ванные комнаты", value: "0"}
                    ]})

                .ui-kit-form-elem__colum
                    .ui-kit-form-elem__dropdown-guest-open
                    +dropdown({label: "Dropdown", placeholder: "Сколько гостей", open: true,items:[
                      {name: "взрослые", value: "0"},
                      {name: "дети", value: "0"},
                      {name: "младенцы", value: "0"}
                    ]})

                .ui-kit-form-elem__colum
                  .ui-kit-form-elem__dropdown-guest-open
                    +dropdown({label: "Dropdown", placeholder: "Сколько гостей", open: true, items:[
                      {name: "взрослые", value: "2"},
                      {name: "дети", value: "2"},
                      {name: "младенцы", value: "0"}
                    ]})


              .ui-kit-form-elem__lists
                .ui-kit-form-elem__colum
                  .ui-kit-form-elem__checkbox-list
                    +checkbox-list({title: "expandable checkbox list", items:[
                      {label: "Завтрак"},
                      {label: "Письменный стол", checked: true},
                      {label: "Стул для кормления", checked: true},
                      {label: "Кроватка", checked: true},
                      {label: "Телевизор"},
                      {label: "Шампунь"},
                    ]})

                  .ui-kit-form-elem__checkbox-list-open
                    +checkbox-list({title: "expandable checkbox list", open:true, items:[
                      {label: "Завтрак"},
                      {label: "Письменный стол", checked: true},
                      {label: "Стул для кормления", checked: true},
                      {label: "Кроватка", checked: true},
                      {label: "Телевизор"},
                      {label: "Шампунь"},
                    ]})

                .ui-kit-form-elem__colum
                  .ui-kit-form-elem__checkbox-rich
                    .ui-kit-form-elem__checkbox-rich-title
                      +widget-title({text:"rich Checkbox Buttons"})
                    .ui-kit-form-elem__checkbox-rich-items
                      .ui-kit-form-elem__checkbox-rich-item
                        +checkbox({label:"Широкий коридор", description: "Ширина коридоров в номере не менее 91 см.",mod:"rich"})
                      .ui-kit-form-elem__checkbox-rich-item
                        +checkbox({label:"Помощник для инвалидов", description: "На 1 этаже вас встретит специалист  и проводит до номера.",mod:"rich"})

                .ui-kit-form-elem__colum
                  .ui-kit-form-elem__bullet-list 
                    +bullet-list({title: "bullet list", items:[
                      {text: "Нельзя с питомцами"},
                      {text: "Без вечеринок и мероприятий"},
                      {text: "Время прибытия — после 13:00, а выезд до 12:00"},
                    ]})


              .ui-kit-form-elem__benefits-and-comments
                .ui-kit-form-elem__colum
                  .ui-kit-form-elem__benefits-list 
                      .ui-kit-form-elem__benefits-item
                        +benefits({
                          title:"Комфорт", 
                          description: "Шумопоглощающие стены", 
                          src: require('./img/insert_emoticon.png'),
                          underlined: true
                          })
                      .ui-kit-form-elem__benefits-item
                        +benefits({
                          title:"Удобство", 
                          description: "Окно в каждой из спален", 
                          src: require('./img/location_city.png'),
                          underlined: true
                          })

                .ui-kit-form-elem__colum-big
                  .ui-kit-form-elem__comment
                    +comment({
                      name: "Мурад Сарафанов", 
                      time: "5 дней назад",
                      comment: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.",
                      count: "12",
                      liked: true,
                      src: require('./img/avatar-1.png')
                      })

        footer.footer f   