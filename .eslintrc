{
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaVersion": 2015
  },
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "node": true
  },
  "extends": ["airbnb-base","plugin:fsd/all"],
  "globals": {
    "$": "readonly",
    "jQuery": "readonly"
  },
  "plugins": ["fsd", "pug"],
  "rules": {
    "linebreak-style": 0,
    "no-new": "off",
    "import/no-unresolved": "off",
    "prefer-regex-literals": "off"
  }
}